<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/Limages"
            android:layout_height="200dp"
            android:src="@drawable/iphone14"/>

<TextView
    android:id="@+id/Lmodelname"
    android:layout_width="wrap_content"
    android:layout_toEndOf="@id/Limages"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="25dp"
    android:textSize="18dp"
    android:textColor="@color/black"
    android:layout_height="wrap_content"
    android:text="Vivo T21X (128 ROM,8RAM)"/>

        <ImageView
            android:id="@+id/RatingStar"
            android:layout_width="90dp"
            android:layout_marginLeft="145dp"
            android:layout_below="@id/Lmodelname"
            android:layout_height="60dp"
            android:src="@drawable/rating"
            />

        <TextView
            android:id="@+id/Lrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Lmodelname"

            android:text="(4.3)"
            android:layout_marginLeft="230dp"

            android:layout_marginTop="22dp"
            android:textSize="15dp"
           />

        <TextView
            android:id="@+id/currenctsym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹"
            android:textColor="@color/black"
            android:layout_below="@id/RatingStar"
            android:layout_marginLeft="8dp"
            android:textSize="30dp"
            android:layout_toEndOf="@id/Limages"/>
        <TextView
            android:id="@+id/Lamout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,999"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:layout_below="@id/RatingStar"
            android:layout_marginLeft="10dp"
            android:textSize="24dp"
            android:layout_toEndOf="@id/currenctsym"/>
        <TextView
            android:id="@+id/free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Delivery"
            android:layout_below="@id/currenctsym"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:layout_toEndOf="@id/Limages"/>






    </RelativeLayout>



</RelativeLayout>